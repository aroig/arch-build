pkgname=@pkgname@-dev
pkgver=0.1
pkgrel=1
pkgdesc="A description"
arch=('i686' 'x86_64')
license=('GPL3')
provides=('@pkgname@')
conflicts=('@pkgname@' '@pkgname@-git')
depends=()
makedepends=('git' 'make')
optdepends=()

source=($pkgname::"git+file://$AB2_DEVEL_DIR/linux/@pkgname@")
md5sums=('SKIP')

pkgver() {
    git --git-dir="$srcdir/$pkgname/.git" ver
}

build() {
    cd "$srcdir/$pkgname"
    make
}

package() {
    cd "$srcdir/$pkgname"
    make DESTDIR="$pkgdir" install
}

