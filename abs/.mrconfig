[DEFAULT]
include = cat "$AB2_ARCH_DIR/mrcommon"

lib = 
        rsync_abs() {
            repo="$1"
            arch="x86_64"
            syncserver="rsync.archlinux.org"
            rsargs='-mrtv --no-motd --delete-after --no-p --no-o --no-g'
            rsync $rsargs $syncserver::abs/{${arch},any}/$repo/ .
        }

repoadd =
        buildpath=$(builddir_path "$PWD")
        package_repoadd "$buildpath" "$AB2_VAR_DIR/arch/abs"

repodel =
         buildpath=$(builddir_path "$PWD")
         package_repodel "$buildpath" "$AB2_VAR_DIR/arch/abs"

update = 
        reponame=$(basename "$PWD")
        rsyc_abs $syncserver "$reponame"


[core]
update = rsync_abs "core"

[community]
update = rsync_abs "community"

[extra]
update = rsync_abs "extra"

[testing]
update = rsync_abs "testing"
        
